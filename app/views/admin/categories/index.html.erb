<h1><%= t('.title') %></h1>

<div class="buttons_panel">
	<%= link_to t('.new_category'), new_admin_category_path, class: 'btn btn-outline-primary btn-sm' %>
</div>

<section id="categories">
	<table class="table">
		<thead>
			<tr>
				<th>#</th>
				<th><%= t('.name') %></th>
				<th></th>
			</tr>
		</thead>
		<tbody>
			<% @categories.each_with_index do |category, index| %>
			<tr>
				<td><%= index + 1 %></td>
				<td><%= category.try :name %></td>
				<td>
					<%= link_to t('.edit'), edit_admin_category_path(category), class: 'btn btn-outline-primary btn-sm' %>
					<%= link_to t('.delete'), admin_category_path(category), method: :delete, data: {confirm: 'Are you shure?'}, class: 'btn btn-outline-danger btn-sm' %>
				</td>
			</tr>
			<% end %>
		</tbody>
	</table>
</section>