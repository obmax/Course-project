<li id="comment">
	<%= link_to comment.user.username, comment.user %>
	<span class="date"><%= time_ago_in_words(comment.created_at) %></span>
	<span><%= link_to "Delete", manual_comment_path(comment.manual, comment), method: :delete, data:{confirm: 'Are you shure?'} if can? :desroy, comment %></span>
	<p><%= comment.body %></p>
</li>